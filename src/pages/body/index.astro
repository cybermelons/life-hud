---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Body Kingdom - Lilaya">
	{/* 
	┌─────────────────────────────────────────┐
	│          BODY KINGDOM                   │
	│                                         │
	│    [Senses Hall]    [Actions Hall]      │
	│    👁️ 0 NUTs        💪 0 NUTs           │
	│    ✓ Available      ✓ Available          │
	│                                         │
	│  Kingdom Health: ████████░░ 80%         │
	│                                         │
	│  Choose a hall to explore...            │
	└─────────────────────────────────────────┘
	*/}
	
	<div class="max-w-4xl mx-auto py-12">
		<!-- Header -->
		<div class="text-center mb-8">
			<h1 class="text-4xl font-bold text-green-400 mb-2">Body Kingdom</h1>
			<p class="text-gray-400">The Outer Ring - Where experiences enter</p>
		</div>
		
		<!-- Kingdom Health -->
		<div class="mb-8 p-4 bg-green-900/20 border border-green-600/50 rounded-lg">
			<div class="flex justify-between items-center mb-2">
				<span class="text-green-400">Kingdom Health</span>
				<span class="text-green-400">80%</span>
			</div>
			<div class="w-full bg-gray-700 rounded-full h-2">
				<div class="bg-green-500 h-2 rounded-full" style="width: 80%"></div>
			</div>
		</div>
		
		<!-- Zone Grid -->
		<div class="grid md:grid-cols-2 gap-6 mb-8">
			<!-- Senses Hall -->
			<a href="/body/senses" class="block p-6 bg-green-900/30 border border-green-600/50 rounded-lg hover:bg-green-900/50 transition-colors">
				<div class="text-3xl mb-2">👁️</div>
				<h2 class="text-xl font-semibold text-green-400 mb-2">Senses Hall</h2>
				<p class="text-sm text-gray-400 mb-4">Where experiences enter through perception</p>
				<div class="flex justify-between text-sm">
					<span class="text-gray-500">0 NUTs stored</span>
					<span class="text-green-400">✓ Available</span>
				</div>
			</a>
			
			<!-- Actions Hall -->
			<a href="/body/actions" class="block p-6 bg-green-900/30 border border-green-600/50 rounded-lg hover:bg-green-900/50 transition-colors">
				<div class="text-3xl mb-2">💪</div>
				<h2 class="text-xl font-semibold text-green-400 mb-2">Actions Hall</h2>
				<p class="text-sm text-gray-400 mb-4">Where intentions manifest physically</p>
				<div class="flex justify-between text-sm">
					<span class="text-gray-500">0 NUTs stored</span>
					<span class="text-green-400">✓ Available</span>
				</div>
			</a>
		</div>
		
		<!-- Recent Activity -->
		<div class="p-4 bg-black/30 border border-green-600/30 rounded-lg">
			<h3 class="text-green-400 mb-2">Recent Activity</h3>
			<p class="text-gray-500 text-sm">No recent NUTs in this kingdom</p>
		</div>
		
		<!-- Navigation -->
		<div class="mt-8 flex justify-between">
			<a href="/" class="text-gray-400 hover:text-gray-200">← Kingdom Gates</a>
			<a href="/mind" class="text-gray-400 hover:text-gray-200">Mind Kingdom →</a>
		</div>
	</div>
</Layout>