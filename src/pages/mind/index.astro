---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Mind Kingdom - Lilaya">
	
	<div class="max-w-4xl mx-auto py-12">
		<!-- Header -->
		<div class="text-center mb-8">
			<h1 class="text-4xl font-bold text-blue-400 mb-2">Mind Kingdom</h1>
			<p class="text-gray-400">The Processing Layer - Where patterns form</p>
		</div>
		
		<!-- Kingdom Health -->
		<div class="mb-8 p-4 bg-blue-900/20 border border-blue-600/50 rounded-lg">
			<div class="flex justify-between items-center mb-2">
				<span class="text-blue-400">Kingdom Health</span>
				<span class="text-yellow-400">60% ⚠️</span>
			</div>
			<div class="w-full bg-gray-700 rounded-full h-2">
				<div class="bg-gradient-to-r from-blue-500 to-yellow-500 h-2 rounded-full" style="width: 60%"></div>
			</div>
			<p class="text-sm text-yellow-400 mt-2">⚠️ Corruption detected in Feelings Hall</p>
		</div>
		
		<!-- Zone Grid -->
		<div class="grid md:grid-cols-2 gap-6 mb-8">
			<!-- Feelings Hall -->
			<a href="/mind/feelings" class="block p-6 bg-blue-900/30 border border-blue-600/50 rounded-lg hover:bg-blue-900/50 transition-colors">
				<div class="text-3xl mb-2">❤️</div>
				<h2 class="text-xl font-semibold text-blue-400 mb-2">Feelings Hall</h2>
				<p class="text-sm text-gray-400 mb-4">Emotional reactions and sensations</p>
				<div class="flex justify-between text-sm">
					<span class="text-gray-500">0 NUTs stored</span>
					<span class="text-yellow-400">⚠️ Klesha detected</span>
				</div>
			</a>
			
			<!-- Thoughts Hall -->
			<div class="block p-6 bg-blue-900/30 border border-blue-600/50 rounded-lg opacity-50">
				<div class="text-3xl mb-2">💭</div>
				<h2 class="text-xl font-semibold text-blue-400 mb-2">Thoughts Hall</h2>
				<p class="text-sm text-gray-400 mb-4">Mental patterns and analysis</p>
				<div class="flex justify-between text-sm">
					<span class="text-gray-500">0 NUTs stored</span>
					<span class="text-gray-500">🔒 Locked</span>
				</div>
			</div>
		</div>
		
		<!-- Recent Activity -->
		<div class="p-4 bg-black/30 border border-blue-600/30 rounded-lg">
			<h3 class="text-blue-400 mb-2">Recent Activity</h3>
			<p class="text-gray-500 text-sm">No recent NUTs in this kingdom</p>
		</div>
		
		<!-- Navigation -->
		<div class="mt-8 flex justify-between">
			<a href="/body" class="text-gray-400 hover:text-gray-200">← Body Kingdom</a>
			<a href="/" class="text-gray-400 hover:text-gray-200">Kingdom Gates →</a>
		</div>
	</div>
</Layout>