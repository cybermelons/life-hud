---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Lilaya - Kingdom Gates">
	{/* 
	┌─────────────────────────────────────────┐
	│            KINGDOM GATES                │
	│                                         │
	│         SPIRIT KINGDOM                  │
	│         🔒 (locked)                     │
	│              ╱ ╲                        │
	│           ╱     ╲                       │
	│    MIND KINGDOM   BODY KINGDOM          │
	│    [Enter ▶]      [Enter ▶]             │
	│         ╲       ╱                       │
	│          ╲   ╱                          │
	│       YOU ARE HERE                      │
	│                                         │
	└─────────────────────────────────────────┘
	*/}
	
	<div class="max-w-4xl mx-auto text-center py-12">
		<h1 class="text-5xl font-bold mb-4">LILAYA</h1>
		<p class="text-gray-400 mb-12 text-lg">Kingdom Gates</p>
		
		<!-- Kingdom Map -->
		<div class="mb-12">
			<!-- Spirit Kingdom (Locked) -->
			<div class="mb-8 opacity-50">
				<div class="inline-block p-6 border-2 border-dashed border-purple-600/50 rounded-lg bg-purple-900/20">
					<div class="text-4xl mb-2">🔒</div>
					<h2 class="text-xl font-semibold text-purple-400">Spirit Kingdom</h2>
					<p class="text-sm text-gray-500 mt-1">Locked - Requires 10 NUTs</p>
				</div>
			</div>
			
			<!-- Mind and Body Kingdoms -->
			<div class="flex justify-center gap-12 mb-8">
				<!-- Mind Kingdom -->
				<a href="/mind" class="block p-8 border-2 border-blue-600 rounded-lg bg-blue-900/30 hover:bg-blue-900/50 transition-colors">
					<div class="text-4xl mb-2">💭</div>
					<h2 class="text-xl font-semibold text-blue-400">Mind Kingdom</h2>
					<p class="text-sm text-gray-400 mt-1">Thoughts & Feelings</p>
					<button class="mt-4 px-4 py-2 bg-blue-600 hover:bg-blue-500 rounded transition-colors">
						Enter ▶
					</button>
				</a>
				
				<!-- Body Kingdom -->
				<a href="/body" class="block p-8 border-2 border-green-600 rounded-lg bg-green-900/30 hover:bg-green-900/50 transition-colors">
					<div class="text-4xl mb-2">💪</div>
					<h2 class="text-xl font-semibold text-green-400">Body Kingdom</h2>
					<p class="text-sm text-gray-400 mt-1">Senses & Actions</p>
					<button class="mt-4 px-4 py-2 bg-green-600 hover:bg-green-500 rounded transition-colors">
						Enter ▶
					</button>
				</a>
			</div>
			
			<!-- Player Position -->
			<div class="mt-8">
				<p class="text-gray-500 font-semibold">YOU ARE HERE</p>
			</div>
		</div>
		
		<!-- Quick Actions -->
		<div class="flex justify-center gap-4">
			<a href="/inventory" class="px-6 py-3 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors">
				📦 Inventory
			</a>
			<a href="/library" class="px-6 py-3 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors">
				📚 Library
			</a>
		</div>
	</div>
</Layout>