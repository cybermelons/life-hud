---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="HUD Dashboard - Life HUD" zone="neutral">
	<div class="max-w-7xl mx-auto">
		<!-- Header -->
		<div class="mb-8">
			<h1 class="text-4xl font-bold text-yellow-400 mb-2">HUD Dashboard</h1>
			<p class="text-gray-300">Real-time overview of your mind palace</p>
		</div>

		<!-- Top Stats -->
		<div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
			<div class="bg-black/30 rounded-lg p-4 border border-yellow-600/30">
				<div class="text-2xl font-bold text-yellow-400">7</div>
				<div class="text-xs text-gray-400">Total NUTs</div>
			</div>
			<div class="bg-black/30 rounded-lg p-4 border border-green-600/30">
				<div class="text-2xl font-bold text-green-400">85%</div>
				<div class="text-xs text-gray-400">Body Health</div>
			</div>
			<div class="bg-black/30 rounded-lg p-4 border border-blue-600/30">
				<div class="text-2xl font-bold text-blue-400">75%</div>
				<div class="text-xs text-gray-400">Mind Health</div>
			</div>
			<div class="bg-black/30 rounded-lg p-4 border border-purple-600/30">
				<div class="text-2xl font-bold text-purple-400">60%</div>
				<div class="text-xs text-gray-400">Spirit Health</div>
			</div>
			<div class="bg-black/30 rounded-lg p-4 border border-orange-600/30">
				<div class="text-2xl font-bold text-orange-400">🔥 1</div>
				<div class="text-xs text-gray-400">Day Streak</div>
			</div>
		</div>

		<div class="grid md:grid-cols-3 gap-6">
			<!-- Recent NUT Stream -->
			<div class="md:col-span-2 bg-gradient-to-br from-gray-900/30 to-gray-800/20 rounded-lg p-6 border border-gray-600/30">
				<h2 class="text-xl font-semibold text-yellow-400 mb-4">📊 Recent NUT Stream</h2>
				<div class="space-y-3 max-h-[500px] overflow-y-auto">
					<!-- Note -->
					<div class="bg-black/20 rounded-lg p-3 border-l-4 border-blue-600">
						<div class="flex items-start justify-between mb-1">
							<div class="flex items-center gap-2">
								<span class="text-xs bg-blue-800 px-2 py-1 rounded">📝 Note</span>
								<span class="text-xs text-gray-400">1 min ago</span>
							</div>
							<span class="text-xs text-blue-400">Mind</span>
						</div>
						<p class="text-sm text-gray-300">Just realized I haven't drunk water in 3 hours</p>
						<div class="flex items-center gap-2 mt-2">
							<span class="text-xs bg-gray-800 px-2 py-1 rounded">#awareness</span>
							<span class="text-xs bg-gray-800 px-2 py-1 rounded">#hydration</span>
						</div>
					</div>

					<!-- Task -->
					<div class="bg-black/20 rounded-lg p-3 border-l-4 border-purple-600">
						<div class="flex items-start justify-between mb-1">
							<div class="flex items-center gap-2">
								<span class="text-xs bg-purple-800 px-2 py-1 rounded">✅ Task</span>
								<span class="text-xs text-gray-400">10 min ago</span>
							</div>
							<span class="text-xs text-purple-400">Spirit</span>
						</div>
						<p class="text-sm text-gray-300">Meditate for 10 minutes</p>
						<div class="flex items-center gap-2 mt-2">
							<span class="text-xs bg-gray-800 px-2 py-1 rounded">#meditation</span>
							<span class="text-xs bg-gray-800 px-2 py-1 rounded">#practice</span>
						</div>
					</div>

					<!-- Urge -->
					<div class="bg-black/20 rounded-lg p-3 border-l-4 border-green-600">
						<div class="flex items-start justify-between mb-1">
							<div class="flex items-center gap-2">
								<span class="text-xs bg-green-800 px-2 py-1 rounded">💭 Urge</span>
								<span class="text-xs text-gray-400">30 min ago</span>
							</div>
							<span class="text-xs text-green-400">Body</span>
						</div>
						<p class="text-sm text-gray-300">Want to go for a walk in the park</p>
						<div class="flex items-center gap-2 mt-2">
							<span class="text-xs bg-gray-800 px-2 py-1 rounded">#locomotion</span>
							<span class="text-xs bg-gray-800 px-2 py-1 rounded">#nature</span>
						</div>
					</div>

					<!-- Note -->
					<div class="bg-black/20 rounded-lg p-3 border-l-4 border-green-600">
						<div class="flex items-start justify-between mb-1">
							<div class="flex items-center gap-2">
								<span class="text-xs bg-green-800 px-2 py-1 rounded">📝 Note</span>
								<span class="text-xs text-gray-400">1 hour ago</span>
							</div>
							<span class="text-xs text-green-400">Body</span>
						</div>
						<p class="text-sm text-gray-300">Feeling energized after morning workout</p>
						<div class="flex items-center gap-2 mt-2">
							<span class="text-xs bg-gray-800 px-2 py-1 rounded">#muscles</span>
							<span class="text-xs bg-gray-800 px-2 py-1 rounded">#energy</span>
						</div>
					</div>

					<!-- Task -->
					<div class="bg-black/20 rounded-lg p-3 border-l-4 border-green-600">
						<div class="flex items-start justify-between mb-1">
							<div class="flex items-center gap-2">
								<span class="text-xs bg-green-800 px-2 py-1 rounded">✅ Task</span>
								<span class="text-xs text-gray-400">2 hours ago</span>
							</div>
							<span class="text-xs text-green-400">Body</span>
						</div>
						<p class="text-sm text-gray-300">Complete 3 sets of bicep curls</p>
						<div class="flex items-center gap-2 mt-2">
							<span class="text-xs bg-gray-800 px-2 py-1 rounded">#bicep</span>
							<span class="text-xs bg-gray-800 px-2 py-1 rounded">#workout</span>
						</div>
					</div>
				</div>
			</div>

			<!-- Right Column -->
			<div class="space-y-6">
				<!-- Zone Health Overview -->
				<div class="bg-black/30 rounded-lg p-4 border border-gray-600/30">
					<h3 class="text-lg font-semibold text-yellow-400 mb-3">🏥 Zone Health</h3>
					<div class="space-y-3">
						<div>
							<div class="flex justify-between text-sm mb-1">
								<span class="text-green-400">Body</span>
								<span class="text-green-400">85%</span>
							</div>
							<div class="bg-black/30 rounded-full h-2 overflow-hidden">
								<div class="bg-gradient-to-r from-green-600 to-green-400 h-full" style="width: 85%"></div>
							</div>
						</div>
						<div>
							<div class="flex justify-between text-sm mb-1">
								<span class="text-blue-400">Mind</span>
								<span class="text-blue-400">75%</span>
							</div>
							<div class="bg-black/30 rounded-full h-2 overflow-hidden">
								<div class="bg-gradient-to-r from-blue-600 to-blue-400 h-full" style="width: 75%"></div>
							</div>
						</div>
						<div>
							<div class="flex justify-between text-sm mb-1">
								<span class="text-purple-400">Spirit</span>
								<span class="text-purple-400">60%</span>
							</div>
							<div class="bg-black/30 rounded-full h-2 overflow-hidden">
								<div class="bg-gradient-to-r from-purple-600 to-purple-400 h-full" style="width: 60%"></div>
							</div>
						</div>
					</div>
				</div>

				<!-- Pattern Detection -->
				<div class="bg-black/30 rounded-lg p-4 border border-gray-600/30">
					<h3 class="text-lg font-semibold text-yellow-400 mb-3">🔍 Patterns Detected</h3>
					<div class="space-y-2">
						<div class="bg-yellow-900/20 rounded p-2 text-xs border border-yellow-700/30">
							<span class="text-yellow-400">💡</span> Creative after coffee (3 occurrences)
						</div>
						<div class="bg-blue-900/20 rounded p-2 text-xs border border-blue-700/30">
							<span class="text-blue-400">😰</span> Anxiety before meetings (2 occurrences)
						</div>
						<div class="bg-green-900/20 rounded p-2 text-xs border border-green-700/30">
							<span class="text-green-400">💪</span> Energy boost post-workout (4 occurrences)
						</div>
					</div>
				</div>

				<!-- Quick Actions -->
				<div class="bg-black/30 rounded-lg p-4 border border-gray-600/30">
					<h3 class="text-lg font-semibold text-yellow-400 mb-3">⚡ Quick Actions</h3>
					<div class="space-y-2">
						<button class="w-full bg-green-900/30 hover:bg-green-800/30 border border-green-600/30 rounded py-2 text-sm transition">
							🏃 Log Body Activity
						</button>
						<button class="w-full bg-blue-900/30 hover:bg-blue-800/30 border border-blue-600/30 rounded py-2 text-sm transition">
							🧠 Capture Thought
						</button>
						<button class="w-full bg-purple-900/30 hover:bg-purple-800/30 border border-purple-600/30 rounded py-2 text-sm transition opacity-50 cursor-not-allowed">
							✨ Set Intention (Locked)
						</button>
					</div>
				</div>

				<!-- Daily Summary -->
				<div class="bg-black/30 rounded-lg p-4 border border-gray-600/30">
					<h3 class="text-lg font-semibold text-yellow-400 mb-3">📅 Today's Summary</h3>
					<div class="grid grid-cols-3 gap-2 text-center">
						<div>
							<div class="text-xl font-bold text-green-400">3</div>
							<div class="text-xs text-gray-400">Body</div>
						</div>
						<div>
							<div class="text-xl font-bold text-blue-400">2</div>
							<div class="text-xs text-gray-400">Mind</div>
						</div>
						<div>
							<div class="text-xl font-bold text-purple-400">1</div>
							<div class="text-xs text-gray-400">Spirit</div>
						</div>
					</div>
					<div class="mt-3 text-xs text-gray-400">
						Most active: <span class="text-green-400">Body Zone</span>
					</div>
				</div>
			</div>
		</div>

		<!-- Mind Palace Mini-Map -->
		<div class="mt-8 bg-black/30 rounded-lg p-6 border border-gray-600/30">
			<h2 class="text-xl font-semibold text-yellow-400 mb-4">🗺️ Mind Palace Map</h2>
			<div class="grid grid-cols-3 gap-4">
				<a href="/body" class="bg-gradient-to-br from-green-900/20 to-green-800/10 rounded-lg p-4 border border-green-600/30 hover:border-green-500/50 transition">
					<div class="text-green-400 font-semibold mb-2">Body</div>
					<div class="text-xs text-gray-400">3 NUTs • 2 zones active</div>
					<div class="mt-2 bg-black/30 rounded-full h-1 overflow-hidden">
						<div class="bg-green-500 h-full" style="width: 85%"></div>
					</div>
				</a>
				<a href="/mind" class="bg-gradient-to-br from-blue-900/20 to-blue-800/10 rounded-lg p-4 border border-blue-600/30 hover:border-blue-500/50 transition">
					<div class="text-blue-400 font-semibold mb-2">Mind</div>
					<div class="text-xs text-gray-400">2 NUTs • 2 zones active</div>
					<div class="mt-2 bg-black/30 rounded-full h-1 overflow-hidden">
						<div class="bg-blue-500 h-full" style="width: 75%"></div>
					</div>
				</a>
				<a href="/spirit" class="bg-gradient-to-br from-purple-900/20 to-purple-800/10 rounded-lg p-4 border border-purple-600/30 hover:border-purple-500/50 transition opacity-50">
					<div class="text-purple-400 font-semibold mb-2">Spirit 🔒</div>
					<div class="text-xs text-gray-400">1 NUT • Locked</div>
					<div class="mt-2 bg-black/30 rounded-full h-1 overflow-hidden">
						<div class="bg-purple-500 h-full" style="width: 60%"></div>
					</div>
				</a>
			</div>
		</div>
	</div>
</Layout>